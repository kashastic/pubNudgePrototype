<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nudgeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="NudgeApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
       //To start From the Splash screen Activity
        <activity android:name="com.example.nudgeapp.SplashScreenActivity" android:theme="@style/AppTheme1">
           <intent-filter>
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>

           </intent-filter>
       </activity>
        <activity android:name="com.example.nudgeapp.LoginActivity" android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>